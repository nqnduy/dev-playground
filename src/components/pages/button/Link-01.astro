<button class='fs-36 hover-un'>Hover me</button>

<style lang="scss">
    @use '~styles/mixins' as *;
    .hover-un {
      position: relative;
      cursor: pointer;
      color: rgba(244, 244, 244, 0.8);
      transition: .6s color ease;

      &[data-mode="gradient"] {
        --gradient: linear-gradient(90deg, #d55b9c, #5237bd 30%, #ff004b 50%, #5237bd 70%, #d55b9c);
        &:before {
          z-index: 2;
          background-image: var(--gradient);
          background-clip: border-box;
          background-size: 200% 100%;
          animation: grad-anim-odd 6s linear infinite;
        }
      }
      &:before {
        content: "";
        position: absolute;
        width: 100%;
        height: 1px;
        bottom: 0.1em;
        left: 0;
        background-color: currentColor;

        transform-origin: right;
        transform: scaleX(0);
        transition: 0.6s transform cubic-bezier(0.66, 0, 0.15, 1);
      }
      @include hover {
        color: rgba(244, 244, 244, 1);
        &:before {
          transform-origin: left;
          transform: scaleX(1);
        }
      }
    }
</style>
